<% if scope.lookupvar('::openshift_origin::nameserver_ha') -%>
prepend domain-name-servers <%= scope.lookupvar('::openshift_origin::nameserver_members').join(', ') %>;
<% else -%>
prepend domain-name-servers <%= scope.lookupvar('::openshift_origin::nameserver_ip_addr') %>;
<% end -%>
supersede host-name "<%= @hostname %>";
supersede domain-name "<%= scope.lookupvar('::openshift_origin::domain') %>";
